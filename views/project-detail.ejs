<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="Joachim Wambua" />

    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title><%= project.title %> | Project Details</title>

    <link href="/css/style.css" rel="stylesheet" media="screen" />
    <link rel="stylesheet" href="/css/lightbox.css" />
  </head>

  <body>
    <div class="animsition">
      <div class="loader">
        <div class="spinner">
          <div class="double-bounce1"></div>
          <div class="double-bounce2"></div>
        </div>
      </div>

      <div class="click-capture"></div>

      <!-- MENU BAR -->
      <div class="menu">
        <span class="close-menu icon-cross2 right-boxed"></span>
        <ul class="menu-list right-boxed">
          <li data-menuanchor="home">
            <a href="/">Home</a>
          </li>
          <li data-menuanchor="about">
            <a href="/#about">About</a>
          </li>
          <li data-menuanchor="experience">
            <a href="/#experience">Work Experience</a>
          </li>
          <li data-menuanchor="clients">
            <a href="/#clients">Clients</a>
          </li>
          <li data-menuanchor="projects">
            <a href="/#projects">Projects</a>
          </li>
          <!-- TODO: Add a Certifications Section = -->
          <li data-menuanchor="certifications">
            <a href="/#certifications">Certifications</a>
          </li>

          <li data-menuanchor="contact">
            <a href="/#contact">Contact</a>
          </li>
        </ul>
        <div class="menu-footer right-boxed">
          <div class="social-list">
            <a href="#" class="icon ion-social-googleplus"></a>
            <a href="#" class="icon ion-social-linkedin"></a>
          </div>
        </div>
      </div>

      <header class="navbar boxed">
        <div class="navbar-bg"></div>
        <a class="brand" href="/">
          <img class="brand-img" alt="" src="<%= url('/images/brand.png') %>" />
          <div class="brand-info">
            <div class="brand-name">Joachim</div>
            <div class="brand-text">Mwengi</div>
          </div>
        </a>
        <button
          type="button"
          class="navbar-toggle"
          data-toggle="collapse"
          data-target="#navbar-collapse"
          aria-expanded="false"
        >
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="contacts d-none d-md-block">
          <div class="contact-item">+254 719 417 307</div>
          <div class="contact-item spacer">/</div>
          <div class="contact-item">
            <a href="mailto:kimwambua96@gmail.com"
              ><span class="__cf_email__">kimwambua96@gmail.com</span></a
            >
          </div>
        </div>
      </header>

      <div class="content">
        <div class="container">
          <div class="row row-project">
            <div class="col-project-name col-md-6 mt-5 mb-5 mb-md-0">
              <h1><%= project.title %></h1>
              <div class="social-list social-list-detail">
                <a href="#" class="icon ion-social-googleplus"></a>
                <a href="#" class="icon ion-social-linkedin"></a>
              </div>
            </div>
            <div class="col-project-info col-md-6">
              <div class="row">
                <div class="col-md-6 mt-5">
                  <h5>Client</h5>
                  <p><%= project.client %></p>
                </div>
                <div class="col-md-6 mt-5">
                  <h5>Team</h5>
                  <p><%= project.author %></p>
                </div>
                <div class="col-md-6 mt-5">
                  <h5>Tech Stack</h5>
                  <p><%- project.tech_stack.join('<br />') %></p>
                </div>
                <div class="col-md-6 mt-5">
                  <h5>Year</h5>
                  <p><%= project.date.getFullYear() %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Add images and other project details dynamically based on your project structure -->
        <img
          alt=""
          class="image-holder wow fadeIn"
          src="<%= project.images.image1 %>"
        />

        <div class="container">
          <h3>About Project</h3>

          <h5>Project Overview</h5>
          <p class="project-detail-text"><%= project.project_overview %></p>

          <h5>Project Objectives</h5>
          <p class="project-detail-text"><%= project.project_objectives %></p>

          <!-- Add more content dynamically based on your project structure -->
          <!-- Example: -->
          <img
            alt=""
            class="image-holder wow fadeInLeft"
            src="<%= project.images.image2 %>"
          />

          <h5>Key Features</h5>
          <ul class="project-detail-text" id="key_features">
            <!-- To Dynamically Append Key Features Here -->
            <% const keyFeaturesArray = project.key_features.split('\n');
            keyFeaturesArray.forEach(function (feature) { %>
            <li><%= feature.trim() %></li>
            <% }); %>
          </ul>

          <% if (project.url) { %>
          <div class="project-link-btn">
            <a href="<%= project.url %>" target="_blank"
              ><button class="btn" id="projectButton"></button
            ></a>
          </div>
          <% } %>

          <img
            alt=""
            class="image-holder wow fadeInRight"
            src="<%= project.images.image3 %>"
          />
          <img
            alt=""
            class="image-holder wow fadeInLeft pb-5"
            src="<%= project.images.background %>"
          />
          <!-- More dynamic content goes here -->
        </div>
      </div>
      <!-- Add your existing HTML content here, such as footer, scripts, etc. -->
    </div>

    <!-- FOOTER SECTION -->
    <div class="copy-bottom white boxed">
      Â© Joachim <span id="currentYear">2019</span>.
    </div>
    <div class="social-list social-list-bottom boxed">
      <a href="#" class="icon ion-social-googleplus"></a>
      <a href="#" class="icon ion-social-linkedin"></a>
    </div>

    <script>
      // Check Project URL Link
      document.addEventListener("DOMContentLoaded", function () {
        var projectUrl = "<%= project.url %>";
        var button = document.getElementById("projectButton");

        if (isGithubLink(projectUrl)) {
          button.textContent = "View Source Code";
        } else {
          button.textContent = "View Project";
        }

        function isGithubLink(url) {
          return url.toLowerCase().includes("github.com");
        }
      });
    </script>

    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"
    ></script>
    <script src="/js/lightbox-plus-jquery.js"></script>
    <script src="/js/wow.min.js"></script>
    <script src="/js/smoothscroll.js"></script>
    <script src="/js/animsition.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.pagepiling.min.js"></script>
    <script type="module" src="/js/script.js"></script>
  </body>
</html>
